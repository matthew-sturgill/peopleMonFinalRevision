<?xml version="1.0" encoding="utf-8"?>
<mattsturgill.peoplemonfinal.Views.NearView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_near_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="List of near PeopleMon"
        android:textSize="15dp"
        android:textAlignment="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/nearby_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

</mattsturgill.peoplemonfinal.Views.NearView>